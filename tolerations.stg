/*
 * Mandatory:
 *
 * tolerations[].effect
 * tolerations[].key
 *
 * Optional:
 *
 * tolerations[].value
 */

tolerationsGroup(parent, vars, tolerations) ::= <<
<if(tolerations)>      tolerations:
<tolerations:toleration()><endif>
>>

toleration(toleration) ::= <<
      - effect: <toleration.effect>
        key: <toleration.key>
        operator: <if(toleration.value)>Equal<else>Exists<endif>
<if(toleration.value)>        value: <toleration.value><endif>
>>
